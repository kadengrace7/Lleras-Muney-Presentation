% Turn off those navigation symbols nobody uses
\setbeamertemplate{navigation symbols}{}

\linespread{1.5}
% The new \br command creates a linebreak
\newcommand{\br}{\vspace{\baselineskip}}

%% Tennessee Orange and Smokey Gray
\definecolor{TennesseeOrange}{RGB}{255, 130, 0}
\definecolor{Smokey}{RGB}{88, 89, 91}

\setbeamercolor{frametitle}{fg = TennesseeOrange}
\setbeamercolor{title}{fg = TennesseeOrange}

% In case you choose to display the Table of Contents, or the Outline slide.
\setbeamercolor{section in toc}{fg = black}
\setbeamercolor{section in toc shaded}{fg = black}

% The colour of all the items, subitems and and subsubitems
\setbeamercolor{item}{fg = Smokey}
\setbeamercolor{subitem}{fg = TennesseeOrange}
\setbeamercolor{subsubitem}{fg = Smokey}
\setbeamercolor{normal text}{fg = Smokey}

\setbeamercolor{postit}{fg=white,bg=TennesseeOrange}
\setbeamercolor{postthat}{fg=TennesseeOrange,bg=TennesseeOrange}
\useinnertheme{rounded}


\setbeamerfont{block title}{size={}}

\setbeamertemplate{title page}{
\begin{center}\vspace{0.5\baselineskip}
{\Large \textcolor{TennesseeOrange}{\inserttitle}}

\insertsubtitle

\br

{\large \insertauthor}

\br
{\small \insertinstitute}

\br
\insertdate

\br

\includegraphics[width=1.3in,keepaspectratio]{utkbeamerfront}

\end{center}
}





\defbeamertemplate*{footline}{}
{
\ifnum \insertpagenumber>1
\vspace{-0.9cm}\begin{beamercolorbox}[sep=0em,ht=0.4cm,dp=0.3cm,wd=\paperwidth,leftskip=0cm,center]{postit}\parbox{0.333333\paperwidth}{{\tiny \insertshorttitle{} \insertframenumber{}} / \inserttotalframenumber}\parbox{0.333333\paperwidth}{ \hspace{0.01cm} }\parbox{0.31\paperwidth}{\hfill\includegraphics[width=2.2cm]{utkbeamerbottom}}\parbox{0.034\paperwidth}{ }\end{beamercolorbox}
\else
\vspace{-0.9cm}\begin{beamercolorbox}[sep=0em,ht=0.4cm,dp=0.3cm,wd=\paperwidth,leftskip=0cm,center]{postthat}\parbox{0.333333\paperwidth}{\hfill}\parbox{0.333333\paperwidth}{ \hspace{0.01cm} }\parbox{0.31\paperwidth}{\hfill}\parbox{0.034\paperwidth}{ }\end{beamercolorbox}

\fi
}
